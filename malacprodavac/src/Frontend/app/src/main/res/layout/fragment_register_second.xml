<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="reg_second_tag"
    android:visibility="visible"
    tools:context=".ui.RegisterSecond"
    tools:visibility="visible">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/registration_city_textview"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat_light"
                android:text="Grad"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_gray_text"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>


            <EditText
                android:maxLines="1"
                android:singleLine="true"

                android:id="@+id/registration_city"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat_light"
                android:padding="8dp"
                android:hint="Unesi grad"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="16dp"></EditText>


        </LinearLayout>
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/registration_postal_code_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat_light"
                android:text="PoÅ¡tanski broj"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_gray_text"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:maxLines="1"
                android:singleLine="true"

                android:id="@+id/registration_postal_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat_light"
                android:padding="8dp"
                android:hint=""
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="16dp"></EditText>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/registration_street_name_textview"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat_light"
                android:text="Ulica"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_gray_text"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:maxLines="1"
                android:singleLine="true"
                android:nextFocusRight="@id/registration_street_number"
                android:id="@+id/registration_street_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat_light"
                android:hint="Unesi ulicu"
                android:padding="8dp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="16dp"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/registration_street_number_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat_light"
                android:text="Broj"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_gray_text"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:maxLines="1"
                android:singleLine="true"

                android:id="@+id/registration_street_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat_light"
                android:hint=""

                android:padding="8dp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="16dp"></EditText>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:maxLines="1"
        android:singleLine="true"

        android:id="@+id/registration_role_textview"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_light"
        android:text="Uloga"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_gray_text"
        android:textSize="16dp"
        android:textStyle="bold"></TextView>

    <FrameLayout

        android:id="@+id/registration_role_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:drawablePadding="8dp">

        <androidx.appcompat.widget.AppCompatSpinner

            android:id="@+id/spinner_uloga"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dropDownSelector="@drawable/baseline_keyboard_arrow_right_24_green"
            android:fontFamily="@font/montserrat_light"
            android:textAlignment="viewStart"
            android:popupBackground="@color/white"
            android:textColorHighlight="@color/cardview_dark_background"
            android:textSize="16dp">

        </androidx.appcompat.widget.AppCompatSpinner>
    </FrameLayout>

    <TextView
        android:id="@+id/registration_phone_number_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_light"
        android:text="Broj telefona"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_gray_text"
        android:textSize="16dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:maxLines="1"
        android:singleLine="true"

        android:id="@+id/registration_phone_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:drawablePadding="8dp"
        android:fontFamily="@font/montserrat_light"
        android:hint="Unesi broj"
        android:padding="8dp"
        android:textColorHighlight="@color/cardview_dark_background"
        android:textSize="16dp"></EditText>


</LinearLayout>