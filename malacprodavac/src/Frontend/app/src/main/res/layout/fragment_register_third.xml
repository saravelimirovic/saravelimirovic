<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterThird"
    android:tag="reg_third_tag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_for_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/montserrat_light"
            android:gravity="left"
            android:text="Kod je poslat na vaš email, napišite ispod dobijeni kod"
            android:textColor="@color/dark_gray_text"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>


        <LinearLayout
            android:id="@+id/flex_layout_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_for_code">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView

                    android:id="@+id/cardView2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:cardCornerRadius="16dp"
                    android:layout_margin="24dp"
                    app:cardElevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/verf_card1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="28dp"
                        android:nextFocusRight="@id/verf_card2"
                        android:fontFamily="@font/alata"
                        android:layout_marginTop="-12dp"
                        android:layout_marginBottom="-12dp"
                        android:singleLine="true"
                        android:maxLength="1">

                    </EditText>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:maxLines="1"
                    android:singleLine="true"

                    android:id="@+id/cardView"
                    android:layout_width="64dp"
                    android:layout_weight="1"
                    android:layout_height="64dp"
                    android:layout_margin="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/verf_card2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="28dp"
                        android:nextFocusRight="@id/verf_card3"
                        android:fontFamily="@font/alata"
                        android:layout_marginTop="-12dp"
                        android:layout_marginBottom="-12dp"
                        android:singleLine="true"
                        android:maxLength="1">

                    </EditText>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="64dp"
                    android:layout_margin="24dp"

                    android:layout_weight="1"
                    android:layout_height="64dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/verf_card3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="28dp"
                        android:nextFocusRight="@id/verf_card4"
                        android:fontFamily="@font/alata"
                        android:layout_marginTop="-12dp"
                        android:layout_marginBottom="-12dp"
                        android:singleLine="true"
                        android:maxLength="1">

                    </EditText>


                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="64dp"
                    android:layout_margin="24dp"

                    android:layout_weight="1"

                    android:layout_height="64dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/verf_card4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="28dp"
                        android:fontFamily="@font/alata"
                        android:layout_marginTop="-12dp"
                        android:layout_marginBottom="-12dp"
                        android:singleLine="true"
                        android:maxLength="1">

                    </EditText>


                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>










        <TextView
            android:id="@+id/verification_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/montserrat_light"
            android:gravity="left"
            android:text="@string/email_vrf"
            android:textColor="@color/dark_gray_text"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flex_layout_reg"></TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>