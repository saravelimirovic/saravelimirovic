<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/white"
    android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Slika osobe -->
                <ImageView
                    android:id="@+id/personImageNotification"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avatar" />

                <!-- Vertikalni LinearLayout za tekstualne informacije -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <!-- Ime i prezime -->
                    <TextView
                        android:fontFamily="@font/montserrat_medium"
                        android:id="@+id/personNameNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Petar Petrovic"
                        android:textSize="20dp" />

                    <!-- Datum objave -->
                    <TextView
                        android:layout_marginTop="0dp"
                        android:id="@+id/dateNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/green_primary"
                        android:text="Datum objave" />

                    <!-- Sadržaj komentara -->
                </LinearLayout>

                <ImageView
                        android:id="@+id/deleteNotification"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_delete_button"/>

            </LinearLayout>



            <TextView
                android:fontFamily="@font/montserrat_medium"
                android:id="@+id/notification_header"
                android:textColor="@color/darker_gray_text"
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:text="Naslov obaveštenja" />

            <TextView
                android:fontFamily="@font/montserrat"
                android:id="@+id/notification_description"
                android:textColor="@color/darker_gray_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="Sadržaj obaveštenja lasdaslds ad adsakjsadfsdflsaflklk   asdlfjsalk fasfs alkasjdfljsadfsaldfjlaksf kldas" />

        </LinearLayout>
</RelativeLayout>
