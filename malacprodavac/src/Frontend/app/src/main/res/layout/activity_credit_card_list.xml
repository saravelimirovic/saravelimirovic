<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="10dp"
            android:layout_margin="10dp"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@color/white">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/baseline_credit_card"/>

        <TextView
            android:id="@+id/creditCardName"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_medium"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="Naziv kartice"/>

        <Button
            android:id="@+id/my_credit_cards"
            android:layout_width="61dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:background="@drawable/card_button"
            android:layout_gravity="end"
            android:backgroundTint="@color/green_primary"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/baseline_keyboard_arrow_right_26"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_alignParentEnd="true"></Button>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>